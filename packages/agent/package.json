{
  "name": "@feedback-chat/agent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/managed-worker.js",
    "start:legacy": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "credentials": "tsx src/credentials.ts",
    "worker:local": "npm run build && node --env-file=.env dist/managed-worker.js",
    "worker:pause-railway": "railway variables set WORKER_PAUSED=true",
    "worker:resume-railway": "railway variables set WORKER_PAUSED=false",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@octokit/app": "^16.1.2",
    "@octokit/rest": "^22.0.1",
    "@supabase/supabase-js": "^2.95.3",
    "fastify": "^5.2.0",
    "minimatch": "^10.2.2"
  },
  "devDependencies": {
    "@types/node": "^22",
    "tsx": "^4.19",
    "typescript": "^5.7",
    "vitest": "^3"
  }
}
